@model List<Portfolio.Models.Blog>
@{
    ViewData["Title"] = "Blog Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="content-header">
        <h2><i class="fas fa-blog"></i> Blog Yazıları</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Görsel</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Görüntülenme</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.Id">
                        <td><img src="@item.Gorsel" alt="@item.Baslik" style="max-height: 40px;"></td>
                        <td>@item.Baslik</td>
                        <td><span class="badge badge-info">@item.Kategori</span></td>
                        <td>@item.GoruntulemeSayisi</td>
                        <td>@item.Tarih?.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                                <i class="ri-edit-line"></i> Düzenle
                            </a>
                            <button onclick="deleteItem(@item.Id)" class="btn btn-sm btn-danger" type="button">
                                <i class="ri-delete-bin-line"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
function deleteItem(id) {
    if (confirm('Bu blog yazısı silinecek. Emin misiniz?')) {
        fetch('@Url.Action("Delete")', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(id)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                document.querySelector(`tr[data-id="${id}"]`).remove();
            } else {
                alert('Silme işlemi başarısız!');
            }
        });
    }
}
</script>
