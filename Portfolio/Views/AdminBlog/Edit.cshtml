@model Portfolio.Models.Blog
@{
    ViewData["Title"] = "Blog Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="content-header">
        <h2><i class="fas fa-edit"></i> Blog Yazısı Düzenle</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
    </div>

    <form asp-action="Edit" method="post" class="admin-form" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Tarih" />
        <input type="hidden" asp-for="GoruntulemeSayisi" />
        
        <div class="form-group">
            <label asp-for="Baslik">Başlık</label>
            <input asp-for="Baslik" class="form-control" />
            <span asp-validation-for="Baslik" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Kategori">Kategori</label>
            <input asp-for="Kategori" class="form-control" />
            <span asp-validation-for="Kategori" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Ozet">Özet</label>
            <textarea asp-for="Ozet" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Ozet" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Icerik">İçerik</label>
            <textarea asp-for="Icerik" class="form-control" rows="8"></textarea>
            <span asp-validation-for="Icerik" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Görsel Yükle (Değiştirmek isterseniz)</label>
            <input type="file" name="GorselFile" class="form-control" accept="image/*" />
            <small class="text-muted d-block mb-2">Mevcut görsel: @Model.Gorsel</small>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
