@model List<Portfolio.Models.Mesaj>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="content-header">
        <h2><i class="fas fa-envelope"></i> Gelen Mesajlar</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Durum</th>
                    <th>İsim</th>
                    <th>Email</th>
                    <th>Konu</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.Id" class="@(item.Okundu ? "" : "unread-message")">
                        <td>
                            @if (item.Okundu)
                            {
                                <i class="fas fa-envelope-open text-muted"></i>
                            }
                            else
                            {
                                <i class="fas fa-envelope text-primary"></i>
                            }
                        </td>
                        <td>@item.Ad</td>
                        <td>@item.Email</td>
                        <td>@item.Konu</td>
                        <td>@item.Tarih?.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info">
                                <i class="ri-eye-line"></i> Görüntüle
                            </a>
                            <button onclick="toggleRead(@item.Id, @item.Okundu.ToString().ToLower())" class="btn btn-sm btn-secondary" type="button">
                                <i class="ri-check-line"></i>
                            </button>
                            <button onclick="deleteItem(@item.Id)" class="btn btn-sm btn-danger" type="button">
                                <i class="ri-delete-bin-line"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
.unread-message {
    background-color: #f0f8ff;
    font-weight: bold;
}
</style>

<script>
function toggleRead(id, okundu) {
    fetch('@Url.Action("ToggleRead")', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(id)
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    });
}

function deleteItem(id) {
    if (confirm('Bu mesaj silinecek. Emin misiniz?')) {
        fetch('@Url.Action("Delete")', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(id)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                document.querySelector(`tr[data-id="${id}"]`).remove();
            } else {
                alert('Silme işlemi başarısız!');
            }
        });
    }
}
</script>
