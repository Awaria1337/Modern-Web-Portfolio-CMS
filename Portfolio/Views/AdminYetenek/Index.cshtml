@model List<Portfolio.Models.Yetenek>
@{
    ViewData["Title"] = "Yetenekler Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1><i class="fas fa-code"></i> @ViewData["Title"]</h1>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Yetenek Ekle
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
    </div>
}

<div class="content-card">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th width="80">Sıra</th>
                    <th>Yetenek</th>
                    <th width="150">Yüzde</th>
                    <th width="100">Durum</th>
                    <th width="200">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Sira</strong></td>
                        <td>@item.Ad</td>
                        <td>
                            <div style="background: #e0e0e0; height: 20px; border-radius: 10px; overflow: hidden;">
                                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); height: 100%; width: @item.Yuzde%; transition: width 0.3s;"></div>
                            </div>
                            <small><strong>@item.Yuzde%</strong></small>
                        </td>
                        <td>
                            @if (item.Aktif)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Pasif</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <button onclick="deleteItem(@item.Id)" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div style="text-align: center; padding: 50px; color: #999;">
            <i class="fas fa-inbox" style="font-size: 48px; margin-bottom: 20px;"></i>
            <p>Henüz yetenek eklenmemiş.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteItem(id) {
            if (confirm('Bu yeteneği silmek istediğinize emin misiniz?')) {
                fetch('@Url.Action("Delete")/' + id, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Silme işlemi başarısız!');
                    }
                });
            }
        }
    </script>
}
