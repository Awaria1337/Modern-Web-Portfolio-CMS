@model Portfolio.Models.Yetenek
@{
    ViewData["Title"] = "Yetenek Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1><i class="fas fa-edit"></i> @ViewData["Title"]</h1>
    <a href="@Url.Action("Index")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="content-card">
    <form asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />
        
        <div class="form-group">
            <label asp-for="Ad">Yetenek Adı</label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Yuzde">Yüzde (0-100)</label>
            <input asp-for="Yuzde" class="form-control" type="number" min="0" max="100" />
            <span asp-validation-for="Yuzde" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sira">Sıra</label>
            <input asp-for="Sira" class="form-control" type="number" />
            <span asp-validation-for="Sira" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>
                <input asp-for="Aktif" type="checkbox" /> Aktif
            </label>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Güncelle
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-times"></i> İptal
        </a>
    </form>
</div>
