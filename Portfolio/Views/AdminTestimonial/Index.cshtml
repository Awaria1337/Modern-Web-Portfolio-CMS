@model List<Portfolio.Models.Testimonial>
@{
    ViewData["Title"] = "Testimonial Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="content-header">
        <h2><i class="fas fa-quote-left"></i> Müşteri Görüşleri</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Yeni Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th>Sıra</th>
                    <th>İsim</th>
                    <th>Ünvan</th>
                    <th>Yorum</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-id="@item.Id">
                        <td>@item.Sira</td>
                        <td>@item.Ad</td>
                        <td>@item.Unvan</td>
                        <td>@(item.Yorum != null && item.Yorum.Length > 50 ? item.Yorum.Substring(0, 50) + "..." : item.Yorum)</td>
                        <td>@item.Tarih?.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                                <i class="ri-edit-line"></i> Düzenle
                            </a>
                            <button onclick="deleteItem(@item.Id)" class="btn btn-sm btn-danger" type="button">
                                <i class="ri-delete-bin-line"></i> Sil
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
function deleteItem(id) {
    if (confirm('Bu testimonial silinecek. Emin misiniz?')) {
        fetch('@Url.Action("Delete")', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(id)
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                document.querySelector(`tr[data-id="${id}"]`).remove();
            } else {
                alert('Silme işlemi başarısız!');
            }
        });
    }
}
</script>
