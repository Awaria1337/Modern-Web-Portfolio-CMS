@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var adminAd = HttpContextAccessor.HttpContext?.Session.GetString("AdminAd") ?? "Admin";
    var adminSoyad = HttpContextAccessor.HttpContext?.Session.GetString("AdminSoyad") ?? "User";
    var initials = "";
    if (!string.IsNullOrEmpty(adminAd) && adminAd.Length > 0)
        initials += adminAd[0];
    if (!string.IsNullOrEmpty(adminSoyad) && adminSoyad.Length > 0)
        initials += adminSoyad[0];
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] | Portfolio Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Portfolio Yönetim Paneli" name="description" />
    
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/admin-assets/images/favicon.ico">
    
    <!-- Theme Config Js -->
    <script src="~/admin-assets/js/config.js"></script>
    
    <!-- App css -->
    <link href="~/admin-assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />
    
    <!-- Icons css -->
    <link href="~/admin-assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    
    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Begin page -->
    <div class="wrapper">
        
        <!-- ========== Topbar Start ========== -->
        <div class="navbar-custom">
            <div class="topbar container-fluid">
                <div class="d-flex align-items-center gap-1">
                    <!-- Topbar Brand Logo -->
                    <div class="logo-topbar">
                        <a href="@Url.Action("Index", "Admin")" class="logo-light">
                            <span class="logo-lg">
                                <h3 class="text-white mb-0">Portfolio</h3>
                            </span>
                            <span class="logo-sm">
                                <h4 class="text-white mb-0">P</h4>
                            </span>
                        </a>
                        
                        <a href="@Url.Action("Index", "Admin")" class="logo-dark">
                            <span class="logo-lg">
                                <h3 class="mb-0">Portfolio</h3>
                            </span>
                            <span class="logo-sm">
                                <h4 class="mb-0">P</h4>
                            </span>
                        </a>
                    </div>
                    
                    <!-- Sidebar Menu Toggle Button -->
                    <button class="button-toggle-menu">
                        <i class="mdi mdi-menu"></i>
                    </button>
                    
                    <!-- Page Title -->
                    <h4 class="page-title d-none d-sm-block">@ViewData["Title"]</h4>
                </div>
                
                <ul class="topbar-menu d-flex align-items-center gap-3">
                    <li class="d-none d-sm-inline-block">
                        <div class="nav-link" id="light-dark-mode">
                            <i class="ri-moon-line fs-22"></i>
                        </div>
                    </li>
                    
                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle arrow-none nav-user" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            <span class="account-user-avatar">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                    <strong>@initials</strong>
                                </div>
                            </span>
                            <span class="d-lg-block d-none">
                                <h5 class="my-0 fw-normal">@adminAd @adminSoyad <i class="ri-arrow-down-s-line fs-22 d-none d-sm-inline-block align-middle"></i></h5>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-animated profile-dropdown">
                            <div class="dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Hoş Geldiniz!</h6>
                            </div>
                            
                            <a href="@Url.Action("Edit", "AdminProfile")" class="dropdown-item">
                                <i class="ri-account-pin-circle-line fs-16 align-middle me-1"></i>
                                <span>Profilim</span>
                            </a>
                            
                            <a href="@Url.Action("Logout", "Admin")" class="dropdown-item">
                                <i class="ri-logout-circle-r-line align-middle me-1"></i>
                                <span>Çıkış Yap</span>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <!-- ========== Topbar End ========== -->
        
        <!-- Left Sidebar Start -->
        <div class="leftside-menu">
            <!-- Logo Light -->
            <a href="@Url.Action("Index", "Admin")" class="logo logo-light">
                <span class="logo-lg">
                    <h3 class="text-white mb-0">Portfolio</h3>
                </span>
                <span class="logo-sm">
                    <h4 class="text-white mb-0">P</h4>
                </span>
            </a>
            
            <!-- Logo Dark -->
            <a href="@Url.Action("Index", "Admin")" class="logo logo-dark">
                <span class="logo-lg">
                    <h3 class="mb-0">Portfolio</h3>
                </span>
                <span class="logo-sm">
                    <h4 class="mb-0">P</h4>
                </span>
            </a>
            
            <!-- Sidebar -->
            <div data-simplebar>
                <ul class="side-nav">
                    <li class="side-nav-title">Ana Menü</li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "Admin")" class="side-nav-link">
                            <i class="ri-dashboard-2-line"></i>
                            <span> Dashboard </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-title">İçerik Yönetimi</li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminProfile")" class="side-nav-link">
                            <i class="ri-user-line"></i>
                            <span> Profil </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminHakkimda")" class="side-nav-link">
                            <i class="ri-information-line"></i>
                            <span> Hakkımda </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminHizmet")" class="side-nav-link">
                            <i class="ri-service-line"></i>
                            <span> Hizmetler </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminYetenek")" class="side-nav-link">
                            <i class="ri-bar-chart-line"></i>
                            <span> Yetenekler </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-title">Portföy & Resume</li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminProje")" class="side-nav-link">
                            <i class="ri-briefcase-line"></i>
                            <span> Projeler </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminEgitim")" class="side-nav-link">
                            <i class="ri-graduation-cap-line"></i>
                            <span> Eğitimler </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminDeneyim")" class="side-nav-link">
                            <i class="ri-briefcase-2-line"></i>
                            <span> Deneyimler </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-title">Sosyal & İletişim</li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminSosyalMedya")" class="side-nav-link">
                            <i class="ri-share-line"></i>
                            <span> Sosyal Medya </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminTestimonial")" class="side-nav-link">
                            <i class="ri-chat-quote-line"></i>
                            <span> Görüşler </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminClient")" class="side-nav-link">
                            <i class="ri-building-line"></i>
                            <span> Clientler </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminMesaj")" class="side-nav-link">
                            <i class="ri-mail-line"></i>
                            <span> Mesajlar </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-title">Blog</li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminBlog")" class="side-nav-link">
                            <i class="ri-article-line"></i>
                            <span> Blog Yazıları </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-title">SEO Yönetimi</li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Index", "AdminSeo")" class="side-nav-link">
                            <i class="ri-dashboard-3-line"></i>
                            <span> SEO Dashboard </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("BlogSeo", "AdminSeo")" class="side-nav-link">
                            <i class="ri-article-line"></i>
                            <span> Blog SEO </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("ProjectSeo", "AdminSeo")" class="side-nav-link">
                            <i class="ri-briefcase-line"></i>
                            <span> Proje SEO </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("GlobalSeo", "AdminSeo")" class="side-nav-link">
                            <i class="ri-global-line"></i>
                            <span> Global SEO </span>
                        </a>
                    </li>
                    
                    <li class="side-nav-item">
                        <a href="@Url.Action("Analytics", "AdminSeo")" class="side-nav-link">
                            <i class="ri-line-chart-line"></i>
                            <span> SEO Analytics </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Left Sidebar End -->
        
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <div class="content">
                <!-- Start Content-->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            
            <!-- Footer Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 text-center">
                            <script>document.write(new Date().getFullYear())</script> © Portfolio Admin Panel
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->
    </div>
    <!-- END wrapper -->
    
    <!-- Vendor js -->
    <script src="~/admin-assets/js/vendor.min.js"></script>
    
    <!-- App js -->
    <script src="~/admin-assets/js/app.min.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>
