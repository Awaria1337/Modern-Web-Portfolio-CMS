@model Portfolio.Models.Hakkimda
@{
    ViewData["Title"] = "Hakkımda Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="content-header">
        <h2><i class="fas fa-edit"></i> Hakkımda Bilgilerini Düzenle</h2>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri
        </a>
    </div>

    <form asp-action="Edit" method="post" class="admin-form">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Id" />
        
        <div class="form-group">
            <label asp-for="Baslik">Başlık</label>
            <input asp-for="Baslik" class="form-control" />
            <span asp-validation-for="Baslik" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Aciklama1">Açıklama 1</label>
            <textarea asp-for="Aciklama1" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Aciklama1" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Aciklama2">Açıklama 2</label>
            <textarea asp-for="Aciklama2" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Aciklama2" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
