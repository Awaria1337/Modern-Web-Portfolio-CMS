@model Portfolio.Models.Proje
@{
    ViewData["Title"] = "Yeni Proje Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1><i class="fas fa-plus"></i> @ViewData["Title"]</h1>
    <a href="@Url.Action("Index")" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="content-card">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Baslik">Proje Başlığı</label>
            <input asp-for="Baslik" class="form-control" placeholder="Örn: E-Ticaret Sitesi" />
            <span asp-validation-for="Baslik" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Kategori">Kategori</label>
            <select asp-for="Kategori" class="form-control">
                <option value="">Kategori seçin...</option>
                <option value="Web design">Web Design</option>
                <option value="Web development">Web Development</option>
                <option value="Applications">Applications</option>
                <option value="Mobile app">Mobile App</option>
            </select>
            <span asp-validation-for="Kategori" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Aciklama">Açıklama</label>
            <textarea asp-for="Aciklama" class="form-control" rows="3" placeholder="Proje açıklaması..."></textarea>
            <span asp-validation-for="Aciklama" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Proje Görseli</label>
            <input type="file" name="gorselFile" class="form-control" accept="image/*" />
            <small class="form-text text-muted">JPG, PNG, GIF formatlarında görsel yükleyebilirsiniz.</small>
        </div>

        <div class="form-group">
            <label asp-for="Gorsel">Görsel URL (Opsiyonel)</label>
            <input asp-for="Gorsel" class="form-control" placeholder="/assets/images/project-1.jpg" />
            <span asp-validation-for="Gorsel" class="text-danger"></span>
            <small class="form-text text-muted">Dosya yüklemek yerine URL girebilirsiniz.</small>
        </div>

        <div class="form-group">
            <label asp-for="Url">Proje URL</label>
            <input asp-for="Url" class="form-control" placeholder="https://example.com" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tarih">Tarih</label>
            <input asp-for="Tarih" class="form-control" type="date" />
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sira">Sıra</label>
            <input asp-for="Sira" class="form-control" type="number" value="1" />
            <span asp-validation-for="Sira" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>
                <input asp-for="Aktif" type="checkbox" checked /> Aktif
            </label>
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Kaydet
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-times"></i> İptal
        </a>
    </form>
</div>
